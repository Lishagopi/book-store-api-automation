pipeline {
  agent any

  tools {
    maven 'Maven 3.6.3'
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/Lishagopi/book-store-api-automation.git', branch: 'master'
      }
    }

    stage('Build and Test') {
      steps {
        sh 'mvn clean test'
      }
    }

    stage('Generate Allure Report') {
      steps {
        sh 'mvn allure:report'
      }
    }
  }

  post {
    always {
      node {
        allure([
          reportBuildPolicy: 'ALWAYS',
          results: [[path: 'target/allure-results']]
        ])
      }
    }
  }
}